@model st10251759_prog7311_ice_task_1.Models.ToDoTask

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg p-5 bg-light border-0">
        <h2 class="text-primary text-center fw-bold">Create a New Task</h2>
        <p class="lead text-center text-secondary">
            Add a new task to your task list.
        </p>

        <hr class="my-4 border-primary">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold text-dark"></label>
                        <input asp-for="Title" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold text-dark"></label>
                        <textarea asp-for="Description" class="form-control border-primary shadow-sm" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label fw-bold text-dark"></label>
                        <input asp-for="DueDate" type="date" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="IsCompleted" />
                        <label class="form-check-label fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.IsCompleted)
                        </label>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-plus-circle"></i> Create Task
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* General Styles */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f4f8; /* Light blue-gray background */
    color: #333;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Card Styles */
.card {
    background: linear-gradient(135deg, #ffffff, #f0f8ff); /* Light white to light blue gradient */
    border-radius: 15px;
    padding: 40px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
}

/* Heading Styles */
h2 {
    color: #1a73e8; /* Primary blue for heading */
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
}

.lead {
    color: #4a5568; /* Dark gray-blue for subheading */
    font-size: 1.25rem;
    margin-bottom: 30px;
}

/* Horizontal Line */
hr {
    border: 0;
    height: 2px;
    background: #1a73e8; /* Blue for horizontal line */
    margin: 20px 0;
}

/* Form Styles */
.form-label {
    font-weight: 600;
    color: #1a73e8; /* Blue for labels */
    font-size: 1.1rem;
}

.form-control {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #1a73e8; /* Blue border for inputs */
    border-radius: 6px;
    background-color: #ffffff;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-control:focus {
    border-color: #1557b0; /* Darker blue on focus */
    outline: none;
    box-shadow: 0 0 5px rgba(26, 115, 232, 0.3);
}

textarea.form-control {
    resize: vertical; /* Allow vertical resizing for textarea */
}

/* Checkbox Styles */
.form-check-input {
    width: 18px;
    height: 18px;
    margin-top: 0;
    border: 1px solid #1a73e8; /* Blue border for checkbox */
    border-radius: 4px;
    transition: background-color 0.3s ease, border-color 0.3s ease;
}

.form-check-input:checked {
    background-color: #1a73e8; /* Blue for checked checkbox */
    border-color: #1a73e8;
}

.form-check-label {
    margin-left: 10px;
    color: #4a5568; /* Dark gray-blue for checkbox label */
}

/* Button Styles */
.btn {
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
}

.btn-primary {
    background-color: #1a73e8; /* Primary blue for create button */
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.btn-primary:hover {
    background-color: #1557b0; /* Darker blue on hover */
    transform: translateY(-2px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
}

.btn-outline-secondary {
    background-color: transparent;
    border: 1px solid #6c757d; /* Gray for back button */
    color: #6c757d;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.btn-outline-secondary:hover {
    background-color: #6c757d; /* Gray on hover */
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
}

/* Icon Styles */
.bi {
    font-size: 1.2rem;
}

/* Validation Styles */
.alert-danger {
    background-color: #ffebee; /* Light red for validation summary */
    border: 1px solid #dc3545; /* Red border */
    color: #dc3545; /* Red text */
    padding: 10px;
    border-radius: 6px;
    margin-bottom: 20px;
}

.text-danger {
    color: #dc3545; /* Red for validation messages */
    font-size: 0.9rem;
    margin-top: 5px;
}

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}